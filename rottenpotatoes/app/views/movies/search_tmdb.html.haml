%h2 Search result

= form_tag movies_path do

  = label :movie, :title, 'Title'
  %span#title= @movies["title"].capitalize
  = hidden_field :movie, 'title' , value: @movies["title"]

  = label :movie, :rating, 'Rating'
  = select :movie, :rating, ['G','PG','PG-13','R','NC-17']

  = label :movie, :release_date, 'Released On'
  = date_select :movie, :release_date , selected: Date.parse(@movies["release_date"])

  = submit_tag 'Save Changes', :class => 'btn btn-primary'